<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TituloEditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BotaoHora">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/selector_botao</item>
        <item name="android:drawableLeft">@drawable/alarms</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textAppearance">@style/TituloEditText</item>
    </style>

</resources>